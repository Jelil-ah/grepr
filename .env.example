# Reddit API
# Go to reddit.com/prefs/apps, create a "script" app
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_secret
REDDIT_USER_AGENT=grepr:v1.0

# AI provider: "groq", "deepseek", or "local"
AI_PROVIDER=groq

# Groq (free, 100k tokens/day)
# Get your key at console.groq.com
GROQ_API_KEY=your_groq_key

# DeepSeek (cheap, good backup when Groq hits rate limit)
# platform.deepseek.com
DEEPSEEK_API_KEY=your_deepseek_key

# Local with LM Studio (free, no key needed)
LOCAL_BASE_URL=http://localhost:1234/v1
LOCAL_MODEL=deepseek

# NocoDB (the database)
NOCODB_BASE_URL=http://localhost:8080
NOCODB_API_TOKEN=your_nocodb_token
NOCODB_TABLE_ID=your_table_id
